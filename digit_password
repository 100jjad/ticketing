    public void changepicture()
    {
        if(Password.length()==1)
        {
            imvf1.setBackgroundResource(R.drawable.f2);
        }
        else if(Password.length() == 2)
        {
            imvf2.setBackgroundResource(R.drawable.f2);
        }
        else if(Password.length() == 3)
        {
            imvf3.setBackgroundResource(R.drawable.f2);
        }
        else if(Password.length() == 4)
        {
            imvf4.setBackgroundResource(R.drawable.f2);
        }
    }
    public void changepicture2()
    {
        if(ConfirmPassword.length()==1)
        {
            imvf1.setBackgroundResource(R.drawable.f2);
        }
        else if(ConfirmPassword.length() == 2)
        {
            imvf2.setBackgroundResource(R.drawable.f2);
        }
        else if(ConfirmPassword.length() == 3)
        {
            imvf3.setBackgroundResource(R.drawable.f2);
        }
        else if(ConfirmPassword.length() == 4)
        {
            imvf4.setBackgroundResource(R.drawable.f2);
        }
    }

    public void rechangePicure()
    {
        imvf1.setBackgroundResource(R.drawable.f1);
        imvf2.setBackgroundResource(R.drawable.f1);
        imvf3.setBackgroundResource(R.drawable.f1);
        imvf4.setBackgroundResource(R.drawable.f1);
    }


    public void changepicture2(String Pass)

    {
        if(Pass.length()==0)
        {
            imvf1.setBackgroundResource(R.drawable.f1);
        }
        else if(Pass.length() == 1)
        {
            imvf2.setBackgroundResource(R.drawable.f1);
        }
        else if(Pass.length() == 2)
        {
            imvf3.setBackgroundResource(R.drawable.f1);
        }
        else if(Pass.length() == 3)
        {
            imvf4.setBackgroundResource(R.drawable.f1);
        }
    }



    public void shake_animation()
    {
        btn0.setAnimation(anim2);
        btn1.setAnimation(anim2);
        btn2.setAnimation(anim2);
        btn3.setAnimation(anim2);
        btn4.setAnimation(anim2);
        btn5.setAnimation(anim2);
        btn6.setAnimation(anim2);
        btn7.setAnimation(anim2);
        btn8.setAnimation(anim2);
        btn9.setAnimation(anim2);
        imvremove.setAnimation(anim2);
        txv1.setText(getString(R.string.digit_pass_choose));
        imvf1.setBackgroundResource(R.drawable.f1);
        imvf2.setBackgroundResource(R.drawable.f1);
        imvf3.setBackgroundResource(R.drawable.f1);
        imvf4.setBackgroundResource(R.drawable.f1);
    }

