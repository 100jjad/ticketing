            txv1.setTypeface(atf);


            imvremove.setOnClickListener(new View.OnClickListener()
            {
                @Override
                public void onClick(View v)
                {
                    if(ConfirmPassword.equals("") && Password.length()<=4 && !Password.equals(""))
                    {
                        Password = Password.substring(0, Password.length() - 1);
                        changepicture2(Password);
                    }
                    if(Password.length() == 4 && !ConfirmPassword.equals(""))
                    {
                        ConfirmPassword = ConfirmPassword.substring(0, ConfirmPassword.length() - 1);
                        changepicture2(ConfirmPassword);
                    }
                }
            });

            btn0.setOnClickListener(new View.OnClickListener()
            {
                @Override
                public void onClick(View v)
                {
                    if(Password.length() !=4)
                    {
                        Password+="0";
                        changepicture();
                        if(Password.length() == 4)
                        {
                            rechangePicure();
                            txv1.setText(getString(R.string.password_confirmpassword));
                        }
                    }
                    else
                    {
                        ConfirmPassword +="0";
                        changepicture2();
                        if(ConfirmPassword.length() ==4)
                        {
                            if(ConfirmPassword.equals(Password))
                            {
                                Config.Set4DigitPassword(getApplicationContext() , Password);
                                Intent intent = new Intent(Digit_Password.this , MainActivity.class);
                                startActivity(intent);
                                finish();
                            }
                            else
                            {
                                Toast.makeText(Digit_Password.this, getString(R.string.digit_pass_not_confirm), Toast.LENGTH_SHORT).show();
                                shake_animation();
                            }
                        }
                    }

                }
            });

